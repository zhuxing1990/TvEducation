<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:background="@drawable/layout_background">

    <RelativeLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false">

        <RelativeLayout
            android:id="@+id/layout_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="31dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/tveduecation_logo">

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_logo"
            android:layout_marginLeft="45dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:background="@drawable/contont_background"></RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_dateils"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_logo"
            android:layout_marginLeft="91dp"
            android:layout_marginTop="31dp">

            <ImageView
                android:id="@+id/videodetails_item_videoimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
              android:src="@drawable/default_pic3"/>

            <TextView
                android:id="@+id/videodetails_videotitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/videodetails_item_videoimg"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp"
                android:maxLines="1"
                android:textSize="26sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="83dp"
            android:layout_marginTop="115dp"
            android:layout_toRightOf="@id/layout_dateils">

            <RelativeLayout
                android:id="@+id/layout_classify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_classify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分类: "
                    android:textColor="#5772fd"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tv_provider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_classify"
                    android:layout_marginTop="13dp"
                    android:text="提供商: "
                    android:textColor="#5772fd"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/videodetails_classify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_classify"
                    android:textColor="#f0f0f0"
                    android:maxLines="1"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/videodetails_video_cp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_classify"
                    android:layout_marginTop="13dp"
                    android:layout_toRightOf="@id/tv_provider"
                    android:textColor="#f0f0f0"
                    android:maxLines="1"
                    android:textSize="22sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="98dp"
                android:layout_toRightOf="@id/layout_classify">

                <TextView
                    android:id="@+id/tv_longtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="时长: "
                    android:textColor="#5772fd"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_longtime"
                    android:layout_marginTop="13dp"
                    android:text="发布时间: "
                    android:textColor="#5772fd"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/videodetails_videotime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_longtime"
                    android:textColor="#f0f0f0"
                    android:maxLines="1"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/videodetails_createtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_longtime"
                    android:layout_marginTop="13dp"
                    android:layout_toRightOf="@id/tv_time"
                    android:textColor="#f0f0f0"
                    android:maxLines="1"
                    android:textSize="22sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_classify"
                android:layout_marginTop="20dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_contentsynopsls"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="内容简介"
                        android:textColor="#ccffffff"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/videodetails_synopslscontent"
                        android:layout_width="600dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_contentsynopsls"
                        android:layout_marginTop="10dp"
                        android:ellipsize="end"
                        android:lineSpacingExtra="5dp"
                        android:maxLines="2"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/btn_play"
                        android:layout_width="160dp"
                        android:layout_height="80dp"
                        android:layout_below="@id/videodetails_synopslscontent"
                        android:background="@drawable/play_2"
                        android:focusableInTouchMode="true" />

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_top"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv_contenttitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:text="相关类容:"
            android:textColor="#fefefe"
            android:textSize="24sp" />

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:paddingLeft="32dp"
           android:paddingRight="25dp"
           android:clipChildren="false"
           android:clipToPadding="false"
           android:layout_below="@id/tv_contenttitle">
           <com.vunke.education.view.TvFocusGridView3
               android:id="@+id/gr_recommend"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:paddingLeft="20dp"
               android:paddingRight="20dp"
               android:horizontalSpacing="20dp"
               android:nextFocusUp="@id/btn_play"
               android:clipChildren="false"
               android:clipToPadding="false"
               android:numColumns="8"
               >
           </com.vunke.education.view.TvFocusGridView3>
       </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>
