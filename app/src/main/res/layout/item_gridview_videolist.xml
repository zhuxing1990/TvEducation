<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:paddingLeft="10dp">
    <RelativeLayout
        android:id="@+id/videolist_gridview_ralative"
        android:layout_width="145dp"
        android:layout_height="200dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:padding="10dp">
        <ImageView
            android:id="@+id/videolist_gridview_videoimg"
            android:layout_width="145dp"
            android:layout_height="200dp"
            android:src="@drawable/default_pic3"/>
        <TextView
            android:id="@+id/videolist_gridview_videotime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_background_black_transparent"
            android:text="10:36"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:gravity="right"
            android:textSize="18sp"
            android:layout_alignParentBottom="true"
            android:textColor="@color/color_text_white7"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/videolist_gridview_name"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:text="@string/childeren_education_maths"
        android:layout_marginTop="12dp"
        android:textSize="24sp"
        android:gravity="center"
        android:textColor="@color/color_text_white8"
        android:layout_below="@+id/videolist_gridview_ralative"/>
</RelativeLayout>